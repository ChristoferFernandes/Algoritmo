algoritmo "Exercício 06"
var
    N1, N2, N3: Inteiro
inicio
      Escreva ("Digite um número: ")
      Leia (N1)
           N2 <- N1 - 1
           N3 <- N1 + 1
      Escreval ("O antecessor de ", N1, " é", N2)
      Escreval ("-------------------------------")
      Escreva ("O sucessor de ", N1, " é", N3)
fimalgoritmo